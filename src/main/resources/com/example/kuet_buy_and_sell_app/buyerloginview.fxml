<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720" prefWidth="1280" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kuet_buy_and_sell_app.HelloController">
    <children>
        <VBox alignment="CENTER" prefHeight="720.0" prefWidth="330.0" style="-fx-background-color: #fbd0c7;">
            <Label text="LOGIN" textFill="WHITE"><font><Font name="System Bold" size="28.0" /></font></Label>
        </VBox>
        <VBox alignment="CENTER" layoutX="330.0" prefHeight="720.0" prefWidth="600.0" spacing="20.0">
            <Label text="KUET LOGIN" textFill="#da6dbc"><font><Font name="System Bold" size="24.0" /></font></Label>
            <TextField fx:id="txtRollLogin" maxWidth="300" promptText="KUET Roll" style="-fx-background-color: transparent; -fx-border-width: 0 0 1 0; -fx-border-color: #ccc;" />
            <PasswordField fx:id="pfPasswordLogin" maxWidth="300" promptText="Password" style="-fx-background-color: transparent; -fx-border-width: 0 0 1 0; -fx-border-color: #ccc;" />
            <Label fx:id="lblLoginStatus" textFill="RED" />
            <Button onAction="#handleLogin" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #fbd0c7; -fx-text-fill: white; -fx-background-radius: 20;" text="LOGIN" />
            <Button onAction="#switch_to_signup" text="Sign Up" />
            <Button onAction="#switch_to_home" text="Home" />
        </VBox>
    </children>
</AnchorPane>