<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox maxWidth="850.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kuet_buy_and_sell_app.cardcontroller">
    <children>
        <HBox spacing="20.0">
            <children>
                <ImageView fx:id="itemImage" fitHeight="120.0" fitWidth="120.0" preserveRatio="true" />
                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="itemNameLabel" style="-fx-font-weight: bold; -fx-font-size: 22;" text="Item Name" />

                        <Label fx:id="ownerNameLabel" style="-fx-text-fill: #757575;" text="Seller: Unknown" />

                        <Label fx:id="categoryLabel" text="Category" />
                        <Label fx:id="priceLabel" style="-fx-font-weight: bold;" text="à§³ 0.0" />
                        <Label fx:id="statusLabel" text="Available" />
                        <Label fx:id="descriptionLabel" wrapText="true" text="Description..." />

                        <HBox alignment="CENTER_RIGHT" spacing="12.0">
                            <children>

                                <Button fx:id="btnAccept" onAction="#handleAccept" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Accept Request" visible="false" managed="false" />
                                <Button fx:id="btnDecline" onAction="#handleDecline" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Decline" visible="false" managed="false" />

                                <Button fx:id="btnMarkSold" onAction="#handleMarkSold" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Mark as Sold" visible="false" managed="false" />
                                <Button fx:id="btnDelete" onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete" visible="false" managed="false" />

                                <Button fx:id="btnAction" onAction="#handleBuyNow" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #00E676; -fx-text-fill: white; -fx-font-weight: bold;" text="Buy Now" />
                                <Button fx:id="btnReview" onAction="#handleLeaveReview"
                                        style="-fx-background-color: #9b59b6; -fx-text-fill: white;"
                                        text="Give Review" visible="false" managed="false" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>