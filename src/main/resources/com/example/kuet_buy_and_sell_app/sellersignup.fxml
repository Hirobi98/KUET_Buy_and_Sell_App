<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720" prefWidth="1280" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kuet_buy_and_sell_app.HelloController">
    <children>
        <VBox alignment="CENTER" prefHeight="720.0" prefWidth="380.0" style="-fx-background-color: linear-gradient(to top right, #2196F3, #21CBF3);">
            <children>
                <Label text="Seller" textFill="WHITE"><font><Font name="System Bold" size="48.0" /></font></Label>
                <Label text="Registration" textFill="WHITE"><font><Font size="24.0" /></font></Label>
            </children>
        </VBox>
        <VBox alignment="CENTER_LEFT" layoutX="400.0" prefHeight="720.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Label text="FULL NAME" /><TextField fx:id="txtSellerName" promptText="Your Name" style="-fx-background-color: transparent; -fx-border-width: 0 0 1 0; -fx-border-color: #ccc;" />
                <Label text="EMAIL" /><TextField fx:id="txtSellerEmail" promptText="Email Address" style="-fx-background-color: transparent; -fx-border-width: 0 0 1 0; -fx-border-color: #ccc;" />
                <Label text="PHONE NUMBER" /><TextField fx:id="txtSellerPhone" promptText="01XXXXXXXXX" style="-fx-background-color: transparent; -fx-border-width: 0 0 1 0; -fx-border-color: #ccc;" />
                <Label text="SHOP NAME" /><TextField fx:id="txtSellerShop" promptText="e.g. Kuet Gadgets" style="-fx-background-color: transparent; -fx-border-width: 0 0 1 0; -fx-border-color: #ccc;" />
                <Label text="PASSWORD" /><PasswordField fx:id="pfSellerPass" promptText="Password" style="-fx-background-color: transparent; -fx-border-width: 0 0 1 0; -fx-border-color: #ccc;" />
                <Label fx:id="lblSellerSignupStatus" textFill="RED" />
                <Button onAction="#handleSellerSignup" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 20;" text="Sign up" />
                <Button onAction="#switch_to_home" text="Back to Home" />
            </children>
            <padding><Insets left="50.0" right="50.0" /></padding>
        </VBox>
    </children>
</AnchorPane>
